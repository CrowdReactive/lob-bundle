{
    "name": "crowdreactive/lob-bundle",
    "description": "A Symfony bundle for the Lob.com PHP SDK",
    "type": "library",
    "keywords": [
        "lob",
        "symfony",
        "bundle"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Ross Masters",
            "email": "ross@rossmasters.com",
            "homepage": "http://rossmasters.com/",
            "role": "Developer"
        }
    ],
    "require": {
        "lob/lob-php": "~1.6",
        "symfony/framework-bundle": "^2.7|^3.0"
    },
    "autoload": {
        "psr-4": {
            "CrowdReactive\\LobBundle\\": "src/",
            "CrowdReactive\\LobBundle\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "fabpot/php-cs-fixer": "^1.11"
    },
    "scripts": {
        "tests": "vendor/bin/phpunit",
        "cs-fixer": "vendor/bin/php-cs-fixer fix"
    }
}
